@{
	ViewData["Title"] = "Update Social Media";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.SocialMediaDtos
@model UpdateSocialMediaDto

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Update Social Media</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Social Media</div>
						</div>
						<div class="card-body">
							<input  type="hidden" asp-for="Id"/>

							<div class="form-group">
								<label for="Title">Enter Title</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>

							<div class="form-group">
								<label for="Url">Enter Url</label>
								<input type="text" class="form-control" id="Url" asp-for="Url">
							</div>

							<div class="form-group">
								<label for="Icon">Enter Icon</label>
								<input type="text" class="form-control" id="Icon" asp-for="Icon">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Update Social Media</button>

						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>

