@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalR.DtoLayer.NotificationDtos
@model List<ResultNotificationDto>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Notification Panel</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> Notification List</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Description</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>

									<th scope="col">Update</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Description</td>
										<td>@item.Date</td>
										<td>@item.Status</td>

										<td><a asp-action="UpdateNotification" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a></td>
										<td><a asp-action="DeleteNotification" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
									</tr>
								}


							</tbody>
						</table>

						<td><a asp-action="CreateNotification" class="btn btn-outline-primary">New Notification</a></td>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>