@{
	ViewData["Title"] = "Update Contact";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.ContactDtos
@model UpdateContactDto

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Update Contact</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Contact</div>
						</div>
						<div class="card-body">

							<input  type="hidden" asp-for="Id"/>

							<div class="form-group">
								<label for="Location">Enter Location</label>
								<input type="text" class="form-control" id="Location" asp-for="Location">
							</div>

							<div class="form-group">
								<label for="Phone">Enter Phone</label>
								<input type="text" class="form-control" id="Phone" asp-for="Phone">
							</div>

							<div class="form-group">
								<label for="Mail">Enter Mail</label>
								<input type="email" class="form-control" id="Mail" asp-for="Mail">
							</div>

							<div class="form-group">
								<label for="FooterDesc">Enter Footer Description</label>
								<textarea rows="5" class="form-control" id="FooterDesc" asp-for="FooterDesc"> </textarea>
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Update Contact</button>

						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>

