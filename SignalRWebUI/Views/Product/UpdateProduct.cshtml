@{
	ViewData["Title"] = "Update Product";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.ProductDtos
@model UpdateProductDto

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Update Product</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Update Product</div>
						</div>
						<div class="card-body">

							<div class="form-group">
								<label for="Productname">Enter Product Name</label>
								<input type="text" class="form-control" id="Productname" asp-for="Name">
							</div>

							<div class="form-group">
								<label for="Price">Enter Product Price</label>
								<input type="text" class="form-control" id="Price" asp-for="Price">
							</div>

							<div class="form-group">
								<label for="ImageUrl">Enter Product ImageUrl </label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>

							<div class="form-group">
								<label for="CategoryId">Enter Product CategoryId</label>
								<select asp-for="CategoryId" class="form-control">
									@foreach (var item in Model.Categories)
									{
										if (item.Id == Model.CategoryId)
										{
											<option value="@item.Id" selected>@item.Name</option>
										}
										else
										{
											<option value="@item.Id">@item.Name</option>
										}
									}
								</select>

							</div>

							<div class="form-group">
								<label for="Description">Enter Product Description</label>
								<input type="text" class="form-control" id="Description" asp-for="Description">
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Update Product</button>

						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>

