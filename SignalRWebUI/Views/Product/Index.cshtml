@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.ProductDtos
@model List<ResultProductDto>
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Product Panel</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> Product List</div>
					</div>
					<div class="card-body">
						
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Product Name</th>
									<th scope="col">Price</th>
									<th scope="col">Category</th>
									<th scope="col">Status</th>
									<th scope="col">Update</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Name</td>
										<td>@item.Price</td>
										<td>@item.Category?.Name</td>
										<td>@item.Status</td>
										<td><a asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a></td>
										<td><a asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
									</tr>
								}
								
								
							</tbody>
						</table>

						<td><a asp-action="CreateProduct" class="btn btn-outline-primary">New Product</a></td>

					</div>
				</div>

			</div>

		</div>
	</div>
</div>