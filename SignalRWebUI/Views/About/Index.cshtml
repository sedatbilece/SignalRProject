@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.AboutDtos
@model List<ResultAboutDto>


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About Panel</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title"> About Item  (only 1 column)</div>
					</div>
					<div class="card-body">

						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">Id</th>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Update</th>
									<th scope="col">Delete</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a asp-action="UpdateAbout" asp-route-id="@item.Id" class="btn btn-outline-success">Update</a></td>
										<td><a asp-action="DeleteAbout" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
									</tr>
								}


							</tbody>
						</table>

						<td><a asp-action="CreateAbout" class="btn btn-outline-primary">New About</a></td>

					</div>
				</div>

			</div>

		</div>
	</div>
</div> 