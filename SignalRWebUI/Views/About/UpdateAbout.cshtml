@{
	ViewData["Title"] = "Create About";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
@using SignalRWebUI.Dtos.AboutDtos
@model UpdateAboutDto

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Create About</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">

					<div class="card">
						<div class="card-header">
							<div class="card-title">Add New About</div>
						</div>
						<div class="card-body">

							<input type="hidden" asp-for="Id"/>

							<div class="form-group">
								<label for="Title">Enter About Title</label>
								<input type="text" class="form-control" id="Title" asp-for="Title">
							</div>

							<div class="form-group">
								<label for="ImageUrl">Enter About Picture Url</label>
								<input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
							</div>

							<div class="form-group">
								<label for="Description">Enter About Description</label>
								<textarea rows="5" class="form-control" id="Description" asp-for="Description"></textarea>
							</div>


						</div>
						<div class="card-action">
							<button class="btn btn-primary">Update About</button>

						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>
